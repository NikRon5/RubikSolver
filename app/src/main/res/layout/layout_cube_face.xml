<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cube_face_grid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="3"
    android:padding="4dp">

    <View
        android:id="@+id/cube_face_cell_0_0"
        style="@style/CubeCell"
        android:layout_row="0"
        android:layout_column="0"/>
    <View
        android:id="@+id/cube_face_cell_0_1"
        style="@style/CubeCell"
        android:layout_row="0"
        android:layout_column="1"/>
    <View
        android:id="@+id/cube_face_cell_0_2"
        style="@style/CubeCell"
        android:layout_row="0"
        android:layout_column="2"/>
    <View
        android:id="@+id/cube_face_cell_1_0"
        style="@style/CubeCell"
        android:layout_row="1"
        android:layout_column="0"/>
    <View
        android:id="@+id/cube_face_cell_1_1"
        style="@style/CubeCell"
        android:layout_row="1"
        android:layout_column="1"/>
    <View
        android:id="@+id/cube_face_cell_1_2"
        style="@style/CubeCell"
        android:layout_row="1"
        android:layout_column="2"/>
    <View
        android:id="@+id/cube_face_cell_2_0"
        style="@style/CubeCell"
        android:layout_row="2"
        android:layout_column="0"/>
    <View
        android:id="@+id/cube_face_cell_2_1"
        style="@style/CubeCell"
        android:layout_row="2"
        android:layout_column="1"/>
    <View
        android:id="@+id/cube_face_cell_2_2"
        style="@style/CubeCell"
        android:layout_row="2"
        android:layout_column="2"/>
</GridLayout>